<div class="container">
  <div>
    <h1 class="text-center"><strong>Eat Dat Burger!</strong> </h1>
    <hr>
    <br>
  </div>

  <div class="flex-center">
    <div class="col-md-4">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}
              <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">DEVOUR IT!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
              <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>



  <h2>Add a Burger</h2>
  <form class="create-update-form" action="burgers/insertOne" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Order It!</button>
  </form>
</div>